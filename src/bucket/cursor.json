{
    "version": "2.2.20",
    "description": "Built to make you extraordinarily productive, Cursor is the best way to code with AI.",
    "homepage": "https://www.cursor.com/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.cursor.com/terms-of-service"
    },
    "architecture": {
        "64bit": {
            "url": "https://downloads.cursor.com/production/b3573281c4775bfc6bba466bf6563d3d498d1074/win32/x64/user-setup/CursorUserSetup-x64-2.2.20.exe",
            "hash": "7beabed404d739c31be63b491cb4e203762c3b34fc636f3800d4ffeb063b91bf"
        }
    },
    "innosetup": true,
    "extract_dir": "{code_GetDestDir}",
    "shortcuts": [
        [
            "Cursor.exe",
            "Cursor"
        ]
    ],
    "portableProfile": {
        "mappings": [
            {
                "label": "home-config",
                "source": "UserProfile/.cursor",
                "target": "$persist_dir/home/config",
                "strategy": "symlink",
                "ensureTarget": true
            },
            {
                "label": "roaming",
                "source": "AppData/Cursor",
                "target": "$persist_dir/roaming",
                "strategy": "symlink",
                "ensureTarget": true
            },
            {
                "label": "programs",
                "source": "LocalAppData/Programs/cursor",
                "target": "$persist_dir/programs",
                "strategy": "symlink",
                "ensureTarget": true
            },
            {
                "label": "updater",
                "source": "LocalAppData/cursor-updater",
                "target": "$persist_dir/local/cursor-updater",
                "strategy": "symlink",
                "ensureTarget": true,
                "targetType": "file"
            }
        ],
        "options": {
            "log": true
        }
    },
    "post_install": [
        "$homeConfig = Join-Path $persist_dir 'home\\config'",
        "$extensionsDir = Join-Path $homeConfig 'extensions'",
        "$roamingDir = Join-Path $persist_dir 'roaming'",
        "$programsDir = Join-Path $persist_dir 'programs'",
        "foreach ($path in @($homeConfig, $extensionsDir, $roamingDir, $programsDir)) { if (-not (Test-Path $path)) { New-Item -ItemType Directory -Path $path -Force | Out-Null } }",
        "$extensionsFile = Join-Path $extensionsDir 'extensions.json'",
        "if (Test-Path $extensionsFile) {",
        "  info 'Adjusting path in extensions file...'",
        "  (Get-Content $extensionsFile) -replace '(?<=cursor(/|\\\\)).*?(?=(/|\\\\)extensions)', $version | Set-Content $extensionsFile",
        "}"
    ],
    "persist": "data",
    "checkver": {
        "url": "https://api2.cursor.sh/updates/api/update/win32-x64-archive/cursor/0.0.0/stable",
        "jsonpath": "$.url",
        "regex": "(?<url>.*CursorUserSetup-x64-(?<version>[\\d.]+)\\.exe)",
        "replace": "${version}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchUrl"
            }
        }
    }
}
