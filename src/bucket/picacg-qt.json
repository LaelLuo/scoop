    ],
    "checkver": {
        "script": [
            "$headers = @{ 'User-Agent' = 'Scoop picacg-qt manifest' }",
            "$url = 'https://api.github.com/repos/tonquer/picacg-qt/releases/latest'",
            "$response = Invoke-WebRequest -Uri $url -UseBasicParsing -Headers $headers",
            "$response.Content"
        ],
        "regex": "\"browser_download_url\"\\s*:\\s*\"https://github.com/tonquer/picacg-qt/releases/download/v([\\d.]+)/bika_v([\\d.]+)_windows_x64\\.zip\"",
        "replace": "$2"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/tonquer/picacg-qt/releases/download/v$match1/bika_v$match2_windows_x64.zip"
            }
        }
    }
}
