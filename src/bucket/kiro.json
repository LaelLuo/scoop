{
    "version": "0.8.0",
    "description": "Kiro is Amazon's agentic IDE built for working with AWS, powered by Claude AI",
    "homepage": "https://kiro.dev/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://kiro.dev/license/"
    },
    "architecture": {
        "64bit": {
            "url": "https://prod.download.desktop.kiro.dev/releases/stable/win32-x64/signed/0.8.0/kiro-ide-0.8.0-stable-win32-x64.exe",
            "hash": "346fbe1d30a1038622f8d594c238d000beff8f5e754e97ce3c9642f0a501d4a9"
        }
    },
    "innosetup": true,
    "extract_dir": "{code_GetDestDir}",
    "shortcuts": [
        [
            "Kiro.exe",
            "Kiro"
        ]
    ],
    "portableProfile": {
        "mappings": [
            {
                "label": "home-config",
                "source": "UserProfile/.kiro",
                "target": "$persist_dir/home/config",
                "strategy": "symlink",
                "ensureTarget": true
            },
            {
                "label": "roaming",
                "source": "AppData/Kiro",
                "target": "$persist_dir/roaming",
                "strategy": "symlink",
                "ensureTarget": true
            },
            {
                "label": "programs",
                "source": "LocalAppData/Programs/kiro",
                "target": "$persist_dir/programs",
                "strategy": "symlink",
                "ensureTarget": true
            }
        ],
        "options": {
            "log": true
        }
    },
    "post_install": [
        "$homeConfig = Join-Path $persist_dir 'home\\config'",
        "$extensionsDir = Join-Path $homeConfig 'extensions'",
        "$roamingDir = Join-Path $persist_dir 'roaming'",
        "$programsDir = Join-Path $persist_dir 'programs'",
        "foreach ($path in @($homeConfig, $extensionsDir, $roamingDir, $programsDir)) { if (-not (Test-Path $path)) { New-Item -ItemType Directory -Path $path -Force | Out-Null } }",
        "$extensionsFile = Join-Path $extensionsDir 'extensions.json'",
        "if (Test-Path $extensionsFile) {",
        "  info 'Adjusting path in extensions file...'",
        "  (Get-Content $extensionsFile) -replace '(?<=kiro(/|\\\\)).*?(?=(/|\\\\)home(/|\\\\)config(/|\\\\)extensions)', $version | Set-Content $extensionsFile",
        "}"
    ],
    "persist": "data",
    "checkver": {
        "url": "https://prod.download.desktop.kiro.dev/stable/metadata-win32-x64-user-stable.json",
        "regex": "\"version\":\"(?<version>[\\d.]+)\".*?\"url\":\"(?<url>[^\"]+win32-x64\\.exe)\"",
        "replace": "${version}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchUrl"
            }
        }
    }
}
