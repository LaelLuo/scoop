{
    "homepage": "https://u.tools/",
    "description": "Your productive tools set and launcher.",
    "license": "Proprietary",
    "version": "7.5.1",
    "architecture": {
        "64bit": {
            "url": "https://open.u-tools.cn/download/uTools-7.5.1.exe#/dl.7z",
            "hash": "2a842cb3b4647502d6e421520861fd97b03da5e9f03113af44c854dfc03fd06c",
            "installer": {
                "script": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR/app-64.7z\" \"$dir\""
            }
        },
        "32bit": {
            "url": "https://open.u-tools.cn/download/uTools-7.5.1-ia32.exe#/dl.7z",
            "hash": "1346ecd0dd1bde1be04d53d5a6788dfffa4c3f341031a7a010ecc0389d9b19ef",
            "installer": {
                "script": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR/app-32.7z\" \"$dir\""
            }
        }
    },
    "shortcuts": [
        [
            "uTools.exe",
            "uTools"
        ]
    ],
    "portableProfile": {
        "mappings": [
            {
                "label": "roaming",
                "source": "AppData/uTools",
                "target": "$persist_dir/roaming",
                "strategy": "symlink",
                "ensureTarget": true
            },
            {
                "label": "updater",
                "source": "LocalAppData/utools-updater",
                "target": "$persist_dir/updater-blocker",
                "strategy": "symlink",
                "ensureTarget": true,
                "targetType": "file"
            }
        ],
        "options": {
            "log": true
        }
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\`$R0\" -Force -Recurse",
    "checkver": {
        "url": "https://www.u-tools.cn/download/",
        "regex": "/download/uTools-([\\d.]+).exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://open.u-tools.cn/download/uTools-$version.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://open.u-tools.cn/download/uTools-$version-ia32.exe#/dl.7z"
            }
        }
    }
}
