{
    "version": "4.1.7.30",
    "description": "Free messaging and calling app by Tencent",
    "homepage": "https://www.wechat.com/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.wechat.com/en/service_terms.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/cscnk52/wechat-windows-versions/releases/download/v4.1.7.30/weixin_4.1.7.30.exe#/dl.7z",
            "hash": "25276e4325d3eb386dabfeed471ea4daa9187b45a34545f33bc5fe46626bd56c"
        }
    },
    "installer": {
        "script": [
            "Expand-7zipArchive \"$dir\\install.7z\" \"$dir\" -Removal",
            "Remove-Item \"$dir\\`$*\", \"$dir\\Uninst*\" -Force -Recurse",
            "$reg_path = \"HKCU:Software\\Tencent\\Weixin\"",
            "if (!(Test-Path \"$reg_path\")) {",
            "    New-Item -Path \"$reg_path\" -Type Directory -Force | Out-Null",
            "}",
            "New-ItemProperty -Path $reg_path -Name \"InstallPath\" -Value \"$dir\" -Force | Out-Null"
        ]
    },
    "shortcuts": [
        [
            "Weixin.exe",
            "WeChat"
        ]
    ],
    "persist": "xwechat_files",
    "portableProfile": {
        "mappings": [
            {
                "label": "xwechat-roaming",
                "source": "AppData/Tencent/xwechat",
                "target": "$persist_dir/roaming",
                "strategy": "symlink",
                "ensureTarget": true
            }
        ],
        "options": {
            "log": true
        }
    },
    "checkver": {
        "github": "https://github.com/cscnk52/wechat-windows-versions"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cscnk52/wechat-windows-versions/releases/download/v$version/weixin_$version.exe#/dl.7z"
            }
        }
    }
}
