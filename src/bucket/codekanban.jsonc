{
    "version": "0.17.0",
    "description": "Manage all your terminals and AI coding tools (Claude Code / Codex) from one unified page.",
    "homepage": "https://github.com/fy0/CodeKanban",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/fy0/CodeKanban/releases/download/v0.17.0/CodeKanban-windows-amd64.zip",
            "hash": "c07c3cdca8fe9abb5bb12967ff4dffa18f51b18d624ade4fd13b68f14fd02a9d"
        }
    },
    "bin": [
        [
            "CodeKanban.exe",
            "codekanban",
            "--home-data"
        ]
    ],
    "persist": "data",
    "portableProfile": {
        "mappings": [
            {
                "label": "home-data",
                "source": "UserProfile/.codekanban",
                "target": "$persist_dir/home",
                "strategy": "symlink",
                "ensureTarget": true
            }
        ],
        "options": {
            "log": true
        }
    },
    "checkver": {
        "github": "https://github.com/fy0/CodeKanban",
        "regex": "releases/tag/v(?<version>[\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/fy0/CodeKanban/releases/download/v$version/CodeKanban-windows-amd64.zip"
            }
        }
    }
}
